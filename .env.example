# Environment Variables for Nipon Payroll Pro

# Firebase Configuration
VITE_FIREBASE_API_KEY=your-firebase-api-key-here
VITE_FIREBASE_AUTH_DOMAIN=nipon-payroll-pro.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=nipon-payroll-pro
VITE_FIREBASE_STORAGE_BUCKET=nipon-payroll-pro.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef123456
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX

# Firebase Cloud Messaging
VITE_FIREBASE_VAPID_KEY=your-vapid-key-here

# Development Settings
VITE_USE_FIREBASE_EMULATORS=false
VITE_ENABLE_DEBUG_LOGGING=true

# App Configuration
VITE_APP_NAME=Nipon Payroll Pro
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Premium Manpower Management for Qatar

# API Endpoints (if using external services)
VITE_PAYMENT_GATEWAY_URL=https://api.payment-provider.com
VITE_SMS_GATEWAY_URL=https://api.sms-provider.com
VITE_EMAIL_SERVICE_URL=https://api.email-provider.com

# Qatar Government API Integration (when available)
VITE_QATAR_MOI_API_URL=https://api.moi.gov.qa
VITE_QATAR_MADLSA_API_URL=https://api.madlsa.gov.qa

# Analytics and Monitoring
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Features Flags
VITE_ENABLE_BIOMETRIC_AUTH=false
VITE_ENABLE_ADVANCED_ANALYTICS=true
VITE_ENABLE_MULTI_COMPANY=true
VITE_ENABLE_MOBILE_APP_INTEGRATION=false

# Subscription and Billing
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-key
VITE_PAYPAL_CLIENT_ID=your-paypal-client-id

# File Upload Limits
VITE_MAX_FILE_SIZE_MB=10
VITE_ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,doc,docx

# Security Settings
VITE_SESSION_TIMEOUT_MINUTES=60
VITE_MAX_LOGIN_ATTEMPTS=5
VITE_PASSWORD_MIN_LENGTH=8

# Localization
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ar
VITE_DEFAULT_CURRENCY=QAR
VITE_DEFAULT_TIMEZONE=Asia/Qatar

# Business Rules (Qatar-specific)
VITE_MAX_WORKING_HOURS_PER_WEEK=48
VITE_OVERTIME_RATE_MULTIPLIER=1.5
VITE_QATAR_VAT_RATE=0.05
VITE_MINIMUM_WAGE_QAR=1000

# Compliance Settings
VITE_QATAR_ID_EXPIRY_ALERT_DAYS=90,60,30
VITE_PASSPORT_EXPIRY_ALERT_DAYS=180,90,30
VITE_VISA_EXPIRY_ALERT_DAYS=60,30,7

# Backup and Data Retention
VITE_AUTO_BACKUP_ENABLED=true
VITE_BACKUP_RETENTION_DAYS=365
VITE_DATA_RETENTION_YEARS=7